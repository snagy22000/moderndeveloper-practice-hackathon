{
  "name": "moderndeveloper-practice-hackathon",
  "description": "Learn.Modern Developer Practice Hackathon",
  "version": "0.0.1",
  "license": "MIT",
  "author": "Stefan Frede & Sebastian Nagy",
  "homepage": "https://stefanfrede.github.io/moderndeveloper-practice-hackathon",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stefanfrede/moderndeveloper-practice-hackathon.git"
  },
  "bugs": {
    "url": "https://github.com/stefanfrede/moderndeveloper-practice-hackathon/issues"
  },
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean -s && mkdir dist",
    "build": "npm run build:markup -s && npm run build:scss -s",
    "build:markup": "cp app/markup/*.html dist",
    "build:scss": "node-sass app/scss/app.scss  --output dist --output-style compressed --source-map true",
    "deploy": "gh-pages -d dist",
    "serve": "node app.js"
  },
  "devDependencies": {
    "browser-sync": "^2.17.5",
    "bs-html-injector": "^3.0.3",
    "gh-pages": "^0.11.0",
    "node-sass": "^3.10.1",
    "rimraf": "^2.5.4"
  }
}
